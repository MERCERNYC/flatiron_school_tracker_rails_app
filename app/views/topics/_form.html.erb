<!-- A view to create a new topic -->
<div class="container text-center">
  <div id="grad1">
    <h2>Start Tracking</h2>


    <%= form_for(Topic.new) do |f| %>

    <div class="form-group">
      <%= f.label :Name %>
      <%= f.text_field :name %>
    </div>

    <div class="form-group">
      <%= f.label :Timeline %>
      <%= f.text_field :timeline %>
    </div>

    <div class="form-group">
      <%= f.label :Note %>
      <%= f.text_field :note %>
    </div>

    <%= f.submit %>

    <% end %>

  </div>
</div>
