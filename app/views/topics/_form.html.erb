<!-- A view to create a new topic -->
<div class="container text-center">
  <div id="grad1">

    <%= form_for(@topic) do |f| %>

    <div class="form-group">
      <%= f.label :Timeline %>
      <%= f.text_field :timeline %>
    </div>

    <div class="form-group">
      <%= f.label :title %>
      <%= f.text_field :title %>
    </div>

    <div class="form-group">
      <%= f.label :Subject%>
      <%= f.text_field :subject %>
    </div>

    <div class="form-group">
    <%= f.collection_check_boxes :lab_ids, Lab.all, :name, :name %>
    </div>

    <div class="form-group">
      <%= f.label :Comment%>
      <%= f.text_field :comment %>
    </div>

    <%= f.submit %>

    <% end %>

  </div>
</div>
