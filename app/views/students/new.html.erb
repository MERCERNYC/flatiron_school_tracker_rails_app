  <div class="container text-center">
    <div id="grad1">

      <h2>Sign up</h2><br>

      <%= form_for(@student) do |f| %>

      <div class="form-group">
        <%= f.label :Name %>
        <%= f.text_field :name %>
      </div>

      <div class="form-group">
        <%= f.label :Email %>
        <%= f.text_field :email %>
      </div>

      <div class="form-group">
        <%= f.label :Password %>
        <%= f.text_field :password %>
      </div>

      <%= f.submit %>

      <% end %>

    </div>
  </div>
